<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:divider="?android:listDivider"
    android:showDividers="middle"
    android:dividerPadding="2.5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="197dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/brandListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            tools:text="LADA"
            android:textSize="12pt" />

        <TextView
            android:id="@+id/modelListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            tools:text="Priora"
            android:textAlignment="textStart"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/stateNumberListItem"
            style="@style/CarListItem"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:fontFamily="@font/road_numbers_otf"
            android:paddingStart="10dp"
            android:paddingTop="6dp"
            tools:text="A111AA"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="12pt"
            app:layout_constraintEnd_toStartOf="@+id/brandList"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/statusListItem"
        android:layout_width="78dp"
        android:layout_height="102dp"
        android:layout_weight="0.33"
        android:gravity="center"
        android:text="Свободна"
        android:textAlignment="center" />


</LinearLayout>