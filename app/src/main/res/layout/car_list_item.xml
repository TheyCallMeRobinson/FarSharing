<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:divider="@color/colorPrimaryDark"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="197dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/brandListItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:paddingStart="10dp"
            android:text="LADA"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/modelListItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:text="Priora"
            android:textAlignment="textStart" />
    </LinearLayout>

    <TextView
        android:id="@+id/stateNumberListItem"
        style="@style/CarListItem"
        android:layout_width="74dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="center"
        android:text="A111AA"
        app:layout_constraintEnd_toStartOf="@+id/brandList"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/statusListItem"
        android:layout_width="78dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="Свободна"
        android:textAlignment="center" />


</LinearLayout>